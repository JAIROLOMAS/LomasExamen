<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LomasExamen.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Pantalla Principal" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" WidthRequest="30" HeightRequest="30" />
        
        <Entry x:Name="txtUsuario" Placeholder="Ingrese su Usuario"/>
        <Entry x:Name="txtClave" Placeholder="Ingrese su Clave" IsPassword="True"/>
        
        <Button x:Name="btnAbrir" Text="Abrir Ventana Dos" Clicked="btnAbrir_Clicked"/>
        
        
        
    </StackLayout>

</ContentPage>
